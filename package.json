{
  "name": "slash",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "dist:create": "mkdir -p dist/",
    "dist:copy": "cp -R client/public/* dist/",
    "dist:common": "run-s dist:create dist:copy",
    "parcel:start": "parcel watch client/public/index.html --no-hmr",
    "parcel:build": "parcel build client/public/index.html --no-source-maps",
    "parcel:dist:start": "run-s dist:common parcel:start",
    "parcel:dist:build": "run-s dist:common parcel:build",
    "server:dev": "nodemon ./server/src/index.js",
    "start": "node ./server/src/index.js",
    "dev": "run-p parcel:dist:start server:dev",
    "install": "run-s parcel:dist:build",
    "lint": "eslint client/src server/src"
  },
  "author": "Fabien JUIF <fabien.juif@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "koa": "^2.5.2",
    "koa-static": "^5.0.0",
    "lodash-es": "^4.17.10",
    "matter-js": "^0.14.2",
    "pixi-viewport": "^3.2.1",
    "pixi.js": "^4.8.1",
    "socket.io": "^2.1.1",
    "socket.io-client": "^2.1.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "globals": {
      "window": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "max-len": [
        "error",
        200
      ],
      "object-curly-newline": "off",
      "no-param-reassign": "off"
    }
  }
}
