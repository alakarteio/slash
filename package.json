{
  "name": "slash",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "main": "index.js",
  "scripts": {
    "parcel:create": "mkdir -p dist/",
    "parcel:copy": "cp -R public/* dist/",
    "parcel:common": "run-s parcel:create parcel:copy",
    "parcel:start": "parcel public/index.html -p 3000 --no-hmr",
    "parcel:build": "parcel build public/index.html --no-source-maps",
    "start": "http-serve dist -p ${PORT:-3000} ",
    "dev": "run-s parcel:common parcel:start",
    "install": "run-s parcel:common parcel:build",
    "lint": "eslint src"
  },
  "author": "Fabien JUIF <fabien.juif@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "lodash-es": "^4.17.10",
    "matter-js": "^0.14.2",
    "pixi-viewport": "^3.2.1",
    "pixi.js": "^4.8.1"
  },
  "devDependencies": {
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "http-serve": "^1.0.1",
    "husky": "^1.0.0-rc.13",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "globals": {
      "window": true
    },
    "rules": {
      "semi": [
        "error",
        "never"
      ],
      "operator-linebreak": [
        "error",
        "after"
      ],
      "max-len": [
        "error",
        200
      ],
      "object-curly-newline": "off",
      "no-param-reassign": "off"
    }
  }
}
